@model WEB2020Apr_P06_T02.Models.FlightCrew
@{
    ViewData["Title"] = "Change";

}

<h4 class="PageTitle">Change Role</h4>
<hr />
<form asp-action="Change">
    <fieldset class="FormContent">
        <div class="form-group row">
            <label asp-for="Role"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <!-- Drop-down list displaying Branch Address,
                with Branch Number as returned value -->
                <select asp-for="Role"
                        asp-items="@ViewData["role"] as List <SelectListItem>" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Change"
                       class="btn btn-primary" />
            </div>
        </div>
        <div>
            <a href="~/Admin/AssignView">Back</a>
        </div>
    </fieldset>
</form>


