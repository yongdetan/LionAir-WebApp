@model WEB2020Apr_P06_T02.Models.Customer

@{
    ViewData["Title"] = "Lion City Airlines | Registration";
}

<br />
<h1 class="PageTitle">Lion City Airlines Member Registration</h1>
<hr />
<form asp-action="Register">
    <fieldset class="FormContent">
        <div class="form-group row">
            <label asp-for="Name"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"
                      class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Nationality"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Nationality" class="form-control" />
                <span asp-validation-for="Nationality"
                      class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DOB"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB"
                      class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="TelNo"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="TelNo" class="form-control" />
                <span asp-validation-for="TelNo"
                      class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"
                      class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Register"
                       class="btn btn-primary" />
            </div>
        </div>
    </fieldset>
</form>
